{
  "compilerOptions": {
    "target": "es2018",
    "moduleResolution": "node",
    "skipLibCheck": true,

    "removeComments": false,
    // "strictNullChecks": true,
    "strictFunctionTypes": true,
    // "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true
  },
  "include": ["packages/**/*.ts"],
  "exclude": ["node_modules"]
}
